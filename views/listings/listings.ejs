<%- layout("layouts/boilerplate.ejs") %>

    <style>
        /* ============================= */
        /* Global background adjustment */
        /* ============================= */
        body {
            background: transparent;
        }

        /* ============================= */
        /* Page Heading */
        /* ============================= */
        .container h2 {
            color: #ffffff;
            font-weight: 800;
            letter-spacing: -0.4px;
            margin-bottom: 1.2rem;
            text-shadow: 0 4px 14px rgba(0, 0, 0, 0.75);
        }

        /* ============================= */
        /* Category Filter Buttons */
        /* ============================= */
        .container .btn-outline-dark {
            color: #ffffff;
            border: 1.5px solid rgba(255, 255, 255, 0.55);
            background: rgba(0, 0, 0, 0.35);
            backdrop-filter: blur(6px);
            border-radius: 999px;
            font-weight: 600;
            padding: 6px 16px;
            margin-right: 6px;
            transition: all 0.25s ease;
        }

        .container .btn-outline-dark:hover {
            background: #ffffff;
            color: #111827;
            border-color: #ffffff;
        }

        /* ============================= */
        /* Product Cards */
        /* ============================= */
        .card {
            border-radius: 18px;
            border: none;
            overflow: hidden;
            background: #ffffff;
            transition: transform 0.35s ease, box-shadow 0.35s ease;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.35);
        }

        /* Hover lift */
        .card:hover {
            transform: translateY(-14px);
            box-shadow: 0 35px 80px rgba(0, 0, 0, 0.45);
        }

        /* ============================= */
        /* Product Image */
        /* ============================= */
        .card-img-top {
            height: 200px;
            object-fit: contain;
            background: linear-gradient(180deg, #f8fafc, #eef2ff);
            border-radius: 14px;
            transition: transform 0.35s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.08);
        }

        /* ============================= */
        /* Card Body */
        /* ============================= */
        .card-body {
            padding: 1.3rem 1.3rem 1.4rem;
            display: flex;
            flex-direction: column;
        }

        /* Product title */
        .card-title {
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.25rem;
        }

        /* Description */
        .card-text {
            font-size: 0.95rem;
            color: #4b5563;
            line-height: 1.5;
        }

        /* Price */
        .card-body .fw-bold {
            font-size: 1.1rem;
            color: #0f172a;
            margin-top: 0.25rem;
        }

        /* ============================= */
        /* Stock Status */
        /* ============================= */
        .text-success {
            color: #16a34a !important;
            font-weight: 600;
        }

        .text-warning {
            color: #d97706 !important;
            font-weight: 600;
        }

        .text-danger {
            color: #dc2626 !important;
            font-weight: 600;
        }

        /* ============================= */
        /* Badges */
        /* ============================= */
        .badge {
            border-radius: 999px;
            padding: 5px 12px;
            font-weight: 600;
            font-size: 0.75rem;
        }

        /* ============================= */
        /* Admin Buttons */
        /* ============================= */
        .btn-warning,
        .btn-danger {
            border-radius: 8px;
        }

        /* ============================= */
        /* Add to Cart Button */
        /* ============================= */
        .btn-warning.btn-sm {
            background: linear-gradient(135deg, #facc15, #f59e0b);
            border: none;
            font-weight: 700;
            color: #111827;
            transition: all 0.25s ease;
        }

        .btn-warning.btn-sm:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 28px rgba(245, 158, 11, 0.45);
        }

        /* Disabled button */
        .btn-secondary[disabled] {
            opacity: 0.7;
            cursor: not-allowed;
        }

        /* ============================= */
        /* Grid consistency */
        /* ============================= */
        .col-md-4 {
            display: flex;
        }

        .col-md-4 .card {
            width: 100%;
        }

        /* ============================= */
        /* Mobile Optimization */
        /* ============================= */
        @media (max-width: 768px) {
            .card:hover {
                transform: none;
                box-shadow: 0 20px 45px rgba(0, 0, 0, 0.35);
            }

            .container h2 {
                font-size: 1.6rem;
            }
        }
    </style>
    <div class="container mt-4">
        <h2 class="mb-4">Available Products</h2>
        <div class="mb-4">
            <a href="/products" class="btn btn-outline-dark btn-sm">All</a>
            <a href="/products/category/1" class="btn btn-outline-dark btn-sm">Clothes</a>
            <a href="/products/category/2" class="btn btn-outline-dark btn-sm">Electronics</a>
            <a href="/products/category/3" class="btn btn-outline-dark btn-sm">Decoration</a>
        </div>
        <div class="row">
            <% for (let product of products) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">

                        <% if (product.image_url) { %>
                            <img src="<%= product.image_url %>" class="card-img-top p-2"
                                style="height: 200px; object-fit: contain; background: #f8f9fa;">
                            <% } %>

                                <div class="card-body d-flex flex-column">

                                    <h5 class="card-title">
                                        <%= product.StockCode %>
                                    </h5>

                                    <p class="card-text">
                                        <%= product.Description %>
                                    </p>

                                    <p class="fw-bold">₹ <%= product.Unit_Price %>
                                    </p>

                                    <p class="mb-1">
                                        <% if (product.available_stock> 0) { %>
                                            <% if (currUser && currUser.role==="admin" ) { %>
                                                <span class="text-success fw-semibold">
                                                    In stock: <%= product.available_stock %>
                                                </span>
                                                <% } else { %>
                                                    <% if (product.available_stock===1) { %>
                                                        <span class="text-warning fw-semibold">Only 1 left!</span>
                                                        <% } else { %>
                                                            <span class="text-success fw-semibold">In stock</span>
                                                            <% } %>
                                                                <% } %>
                                                                    <% } else { %>
                                                                        <span class="text-danger fw-semibold">Out of
                                                                            stock</span>
                                                                        <% } %>
                                    </p>

                                    <span class="badge bg-secondary">
                                        <%= product.Category %>
                                    </span>

                                    <% if (product.Unit_Price < 1000) { %>
                                        <span class="badge bg-warning ms-2">Low Price</span>
                                        <% } %>

                                            <% if (currUser && currUser.role==="admin" ) { %>
                                                <div class="mt-3 d-flex gap-2">
                                                    <a href="/products/<%= product.ProductID %>/edit"
                                                        class="btn btn-sm btn-warning">Edit</a>

                                                    <form action="/products/<%= product.ProductID %>?_method=DELETE"
                                                        method="POST">
                                                        <button class="btn btn-sm btn-danger"
                                                            onclick="return confirm('Delete this product?')">
                                                            Delete
                                                        </button>
                                                    </form>
                                                </div>
                                                <% } %>

                                                    <!-- ✅ ADD TO CART AT BOTTOM -->
                                                    <% if (currUser && currUser.role==="user" ) { %>
                                                        <div class="mt-auto pt-3">
                                                            <% if (product.available_stock> 0) { %>
                                                                <form action="/cart/add/<%= product.ProductID %>"
                                                                    method="POST">
                                                                    <button class="btn btn-warning btn-sm w-100">
                                                                        <i class="fa fa-cart-plus"></i> Add to Cart
                                                                    </button>
                                                                </form>
                                                                <% } else { %>
                                                                    <button class="btn btn-secondary btn-sm w-100"
                                                                        disabled>
                                                                        Out of stock
                                                                    </button>
                                                                    <% } %>
                                                        </div>
                                                        <% } %>

                                </div>
                    </div>

                </div>
                <% } %>
        </div>
    </div>