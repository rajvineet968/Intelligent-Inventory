<%-layout('layouts/boilerplate.ejs')%>
<style>
    /* ============================= */
/* Floating Project Overview Card */
/* ============================= */

.animate-card {
    animation: floatIdle 2.5s ease-in-out infinite;
    transition: transform 0.35s ease, box-shadow 0.35s ease;
}

/* Hover lift */
.animate-card:hover {
    transform: translateY(-14px) scale(1.02);
    box-shadow: 
        0 30px 70px rgba(0, 0, 0, 0.55),
        0 0 40px rgba(102, 126, 234, 0.25);
}

/* Idle floating animation */
@keyframes floatIdle {
    0% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-14px);
    }
    100% {
        transform: translateY(0);
    }
}

/* Button subtle lift */
.animate-btn {
    transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.animate-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.5);
}
.card-text {
    text-shadow: 0 2px 8px rgba(0,0,0,0.35);
}

@media (hover: none) {
    .animate-card {
        animation: none;
    }
}

</style>

<div class="container bg-container d-flex justify-content-center align-items-center"
     style="min-height: calc(100vh - 220px);">

    <div class="card shadow-lg border-0 w-50 animate-card"
         style="
            background: linear-gradient(180deg, #0127ff6b 0%, #ffffffc2 100%);
            min-height: 420px;
            color: white;
         ">

        <!-- Card Header -->
        <div class="card-header text-center text-white fw-semibold fs-5"
             style="background: linear-gradient(135deg, #667eeab4 0%, #764ba2 100%);
                    border-top-left-radius: 0.5rem;
                    border-top-right-radius: 0.5rem;">
            Project Overview
        </div>

        <!-- Card Body -->
        <div class="card-body px-4 py-5 d-flex flex-column justify-content-between">

            <p class="card-text fs-5 lh-lg text-tertiary text-center">
                This project focuses on building an intelligent, data-driven forecasting system for the retail sector
                using historical sales data. It applies advanced analytics and machine learning to predict demand
                accurately, helping businesses optimize inventory, reduce costs, and improve supply chain efficiency.
            </p>

            <div class="text-center mt-4">
                <a href="products" class="btn btn-primary px-5 py-2 animate-btn">
                    Proceed
                </a>
            </div>

        </div>
    </div>
</div>
