<%- layout("layouts/boilerplate.ejs") %>
    <style>
        /* ============================= */
        /* Create Product Page Styling */
        /* ============================= */

        /* Page heading */
        .container h2 {
            color: #ffffff;
            font-weight: 800;
            margin-bottom: 1.5rem;
            text-shadow: 0 4px 14px rgba(0, 0, 0, 0.75);
        }

        /* Form wrapper as floating card */
        .container form {
            max-width: 720px;
            margin: 0 auto;
            padding: 2rem 2.2rem;
            border-radius: 18px;
            background: linear-gradient(180deg,
                    rgba(255, 255, 255, 0.12),
                    rgba(255, 255, 255, 0.06));
            backdrop-filter: blur(8px);
            box-shadow: 0 30px 70px rgba(0, 0, 0, 0.45);
        }

        /* Labels */
        .container label {
            font-weight: 600;
            color: #e5e7eb;
            margin-bottom: 6px;
        }

        /* Inputs, textarea, select */
        .form-control,
        .form-select {
            background: rgba(255, 255, 255, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.25);
            color: #ffffff;
            border-radius: 10px;
            padding: 10px 12px;
            transition: all 0.2s ease;
        }

        /* Placeholder text */
        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.65);
        }

        /* Focus state */
        .form-control:focus,
        .form-select:focus {
            background: rgba(255, 255, 255, 0.2);
            border-color: #22c55e;
            box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.35);
            color: #ffffff;
        }

        /* Textarea */
        textarea.form-control {
            min-height: 100px;
            resize: vertical;
        }

        /* File input */
        input[type="file"].form-control {
            padding: 6px;
            background: rgba(255, 255, 255, 0.12);
        }

        /* Submit button */
        .btn-success {
            margin-top: 1.2rem;
            padding: 10px 28px;
            font-weight: 700;
            border-radius: 10px;
            border: none;
            background: linear-gradient(135deg, #22c55e, #16a34a);
            box-shadow: 0 12px 30px rgba(34, 197, 94, 0.45);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        /* Hover effect */
        .btn-success:hover {
            transform: translateY(-3px);
            box-shadow: 0 18px 45px rgba(34, 197, 94, 0.65);
        }

        /* Mobile */
        @media (max-width: 768px) {
            .container form {
                padding: 1.5rem;
            }
        }
    </style>
    <div class="container mt-4">
        <h2 style="text-align: center !important;">Create Product</h2>

        <form action="/products" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label>Stock Code</label>
                <input name="stockcode" class="form-control" required>
            </div>

            <div class="mb-3">
                <label>Description</label>
                <textarea name="description" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
                <label>Unit Price</label>
                <input name="unit_price" type="number" step="0.01" class="form-control" required>
            </div>

            <div class="mb-3">
                <label>Quantity</label>
                <input type="number" name="quantity" class="form-control" min="0" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Category</label>
                <select name="catid" class="form-control" required>
                    <option value="">-- Select Category --</option>
                    <option value="1">Clothes</option>
                    <option value="2">Electronics</option>
                    <option value="3">Decoration</option>
                </select>
            </div>


            <div class="mb-3">
                <label>Product Image</label>
                <input name="image" type="file" class="form-control" accept="image/*">
            </div>

            <button class="btn btn-success">Create Product</button>
        </form>
    </div>