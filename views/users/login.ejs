<%-layout("layouts/boilerplate.ejs")%>

<style>
/* Inline styles taken from animations.css â€” scoped for the login page */

/* Background & overlay */
html, body {
    height: 100%;
    margin: 0;
    overflow: hidden;   /* ðŸ”¥ kills scroll */
}
header, footer {
    flex-shrink: 0;
}
body { display: flex; flex-direction: column; min-height: 100vh; }
body::before{
    content: "";
    position: fixed;
    inset: 0;
    background-image: url('/images/bg.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: blur(8px);
    transform: scale(1.1);
    z-index: -2;
}
body::after{
    content: "";
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.4);
    z-index: -1;
}
header, footer, .container { position: relative; z-index: 1; }

/* Auth page layout */
.auth-page {
    flex: 1;                      /* take remaining space */
    display: flex;
    align-items: center;          /* vertical center */
    justify-content: center;      /* horizontal center */
}

.auth-page .row {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: center;
    gap: 12px;
    width: 100%;
}

/* Panels & card */
.admin-panel { background: #1f252a98; border-radius: 50px; }
.user-panel  { background: #ea090918; border-radius: 50px; }

.auth-card {
    padding: 25px;
    border-radius: 20px;
    background: transparent;
}
.auth-card input { border-radius: 30px; padding: 12px 16px; }
.auth-card .form-control { margin-bottom: 12px; }
.auth-card h3 { margin-bottom: 16px; }
.auth-card button { border-radius: 30px; padding: 10px; font-weight: 600; }

/* Make the card use the page context (not white) */
.card.auth-card {
    background: rgba(20, 20, 30, 0.164);  /* darker glass */
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(14px);

    border-radius: 22px;
    color: #fff;
    border: 1px solid rgba(255,255,255,0.25);

    box-shadow: 0 20px 50px rgba(0,0,0,0.55);
}
.card.auth-card .card-body { background: transparent; }
.card.auth-card .card-title { color: #fff; margin-bottom: 1rem; }
.card.auth-card .form-control {
    width: 340px !important;
    font-size: 16px !important;
    padding: 14px 22px !important;
    border-radius: 30px !important;

    background: rgba(255, 255, 255, 0.35) !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);

    border: 1px solid rgba(255, 255, 255, 0.5) !important;
    color: #fff !important;
}
.card.auth-card .form-control::placeholder { color: rgba(255,255,255,0.7); }
.card.auth-card .form-control:focus {
    background: rgba(255, 255, 255, 0.45) !important;
    border-color: rgba(255, 255, 255, 0.7) !important;
    box-shadow: none !important;
}
.auth-card .btn-success {
    width: 100%;
    border-radius: 30px;
    padding: 12px;
    font-size: 16px;
    margin-top: 10px;
}

/* Card hover animation */
.animate-card {
    opacity: 1;
    transition: transform .3s ease, box-shadow .3s ease;
}
.animate-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.2);
}

.card.auth-card .form-control {
    height: 52px !important;              /* increase height */
    font-size: 16px !important;           /* bigger text */
    padding: 14px 20px !important;        /* more space inside */
}

/* Responsive tweaks */
@media (max-width: 991px) {
    .auth-page .row { flex-direction: column; align-items: center; gap: 20px; }
    .admin-panel, .user-panel { max-width: 90%; flex: 0 0 90%; border-radius: 24px; }
    .auth-page { padding: 8px 12px 44px; }
}
@media (max-width: 768px) {
    .admin-panel, .user-panel { max-width: 100%; flex: 1; border-radius: 20px; }
    .auth-page { padding: 6px 10px 40px; }
    .auth-page .row { gap: 16px; }
    .auth-card h3 { font-size: 20px; margin-bottom: 12px; }
}
@media (max-width: 480px) {
    .auth-page { padding: 4px 8px 36px; }
    .auth-card { padding: 16px; }
    .auth-card h3 { font-size: 18px; }
}
</style>

<div class="auth-page">
    <div class="card shadow-sm animate-card auth-card">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">Login</h1>

            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="ID" class="form-label">ID</label>
                    <input id="ID" name="ID" type="text" class="form-control" required autofocus>
                    <div class="invalid-feedback">Please enter ID.</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input id="password" name="password" type="password" class="form-control" required>
                    <div class="invalid-feedback">Please enter password.</div>
                </div>

                <button type="submit" class="btn btn-success">Login</button>
            </form>
        </div>
    </div>
</div>
